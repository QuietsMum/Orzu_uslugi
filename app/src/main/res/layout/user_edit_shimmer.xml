<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/image_back_name_tast"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/back_orange_scaled"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/create_user_edit_back2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_arrow_back_white_48pt_3x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:id="@+id/linear_for_name_tast2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:orientation="vertical"
        android:weightSum="7">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/transparent"></androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_of_user_edit2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:paddingBottom="90dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.core.widget.NestedScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="16dp"
                            android:clipToPadding="false"
                            android:overScrollMode="never">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/topview2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent">

                                <androidx.cardview.widget.CardView
                                    android:id="@+id/userAvatarCard2"
                                    android:layout_width="120dp"
                                    android:layout_height="120dp"
                                    android:layout_centerHorizontal="true"
                                    android:layout_margin="16dp"
                                    android:elevation="0dp"
                                    app:cardCornerRadius="60dp"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">

                                    <ImageView
                                        android:id="@+id/userAvatar2"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:scaleType="centerCrop"
                                        android:src="@drawable/ic_person_72pt_3x" />
                                </androidx.cardview.widget.CardView>

                                <TextView
                                    android:id="@+id/name_txt2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="20dp"
                                    android:text="Имя"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/userAvatarCard2" />

                                <EditText
                                    android:id="@+id/user_edit_name2"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginRight="20dp"
                                    android:background="@null"
                                    android:text=""
                                    android:textSize="16sp"
                                    app:layout_constraintLeft_toLeftOf="@id/name_txt2"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/name_txt2" />

                                <View
                                    android:id="@+id/divider12"
                                    android:layout_width="0dp"
                                    android:layout_height="2dp"
                                    android:layout_marginTop="8dp"
                                    android:background="@color/colorPrimaryGrey"
                                    app:layout_constraintLeft_toLeftOf="@id/user_edit_name2"
                                    app:layout_constraintRight_toRightOf="@id/user_edit_name2"
                                    app:layout_constraintTop_toBottomOf="@id/user_edit_name2" />

                                <TextView
                                    android:id="@+id/surname_txt2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:text="Фамилия"
                                    app:layout_constraintLeft_toLeftOf="@id/name_txt2"
                                    app:layout_constraintTop_toBottomOf="@id/divider12" />

                                <EditText
                                    android:id="@+id/user_edit_fname2"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginRight="20dp"
                                    android:background="@null"
                                    android:text=""
                                    android:textSize="16sp"
                                    app:layout_constraintLeft_toLeftOf="@id/surname_txt2"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/surname_txt2" />

                                <View
                                    android:id="@+id/divider22"
                                    android:layout_width="0dp"
                                    android:layout_height="2dp"
                                    android:layout_marginTop="8dp"
                                    android:background="@color/colorPrimaryGrey"
                                    app:layout_constraintLeft_toLeftOf="@id/user_edit_fname2"
                                    app:layout_constraintRight_toRightOf="@id/user_edit_fname2"
                                    app:layout_constraintTop_toBottomOf="@id/user_edit_fname2" />

                                <TextView
                                    android:id="@+id/place_txt2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:text="Город проживания"
                                    app:layout_constraintLeft_toLeftOf="@id/name_txt2"
                                    app:layout_constraintTop_toBottomOf="@id/divider22" />

                                <Spinner
                                    android:id="@+id/user_edit_place2"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginRight="20dp"
                                    android:background="@null"
                                    android:entries="@array/citylist"
                                    android:textSize="16sp"
                                    app:layout_constraintLeft_toLeftOf="@id/place_txt2"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/place_txt2" />

                                <View
                                    android:id="@+id/divider32"
                                    android:layout_width="0dp"
                                    android:layout_height="2dp"
                                    android:layout_marginTop="8dp"
                                    android:background="@color/colorPrimaryGrey"
                                    app:layout_constraintLeft_toLeftOf="@id/user_edit_place2"
                                    app:layout_constraintRight_toRightOf="@id/user_edit_place2"
                                    app:layout_constraintTop_toBottomOf="@id/user_edit_place2" />

                                <TextView
                                    android:id="@+id/about_txt2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:text="О себе"
                                    app:layout_constraintLeft_toLeftOf="@id/name_txt2"
                                    app:layout_constraintTop_toBottomOf="@id/divider32" />

                                <EditText
                                    android:id="@+id/useri_edit_about2"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginRight="20dp"
                                    android:background="@null"
                                    android:text=""
                                    app:layout_constraintLeft_toLeftOf="@id/about_txt2"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/about_txt2" />

                                <View
                                    android:id="@+id/divider42"
                                    android:layout_width="0dp"
                                    android:layout_height="2dp"
                                    android:layout_marginTop="8dp"
                                    android:background="@color/colorPrimaryGrey"
                                    app:layout_constraintLeft_toLeftOf="@id/useri_edit_about2"
                                    app:layout_constraintRight_toRightOf="@id/useri_edit_about2"
                                    app:layout_constraintTop_toBottomOf="@id/useri_edit_about2" />

                                <TextView
                                    android:id="@+id/birth_txt2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:text="Дата рождения"
                                    app:layout_constraintLeft_toLeftOf="@id/name_txt2"
                                    app:layout_constraintTop_toBottomOf="@id/divider42" />

                                <androidx.constraintlayout.widget.ConstraintLayout
                                    android:id="@+id/user_edit_birth2"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginRight="20dp"
                                    android:background="@drawable/circle_shape_intro_blue_5corner_stroke"
                                    android:padding="16dp"
                                    app:layout_constraintLeft_toLeftOf="@id/birth_txt2"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/birth_txt2">

                                    <TextView
                                        android:id="@+id/birth_textview2"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="20dp"
                                        android:text=""
                                        android:textColor="@android:color/black"
                                        android:textSize="16sp"
                                        app:layout_constraintLeft_toLeftOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />
                                </androidx.constraintlayout.widget.ConstraintLayout>


                                <TextView
                                    android:id="@+id/sex2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:text="Пол"
                                    app:layout_constraintLeft_toLeftOf="@id/name_txt2"
                                    app:layout_constraintTop_toBottomOf="@id/user_edit_birth2" />


                                <RadioGroup
                                    android:id="@+id/radioGroup2"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    app:layout_constraintLeft_toLeftOf="@id/sex2"
                                    app:layout_constraintRight_toRightOf="@id/user_edit_birth2"
                                    app:layout_constraintTop_toBottomOf="@id/sex2">

                                    <RadioButton
                                        android:id="@+id/male"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="8dp"
                                        android:layout_weight="1"
                                        android:text="Мужчина" />

                                    <RadioButton
                                        android:id="@+id/female"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="8dp"
                                        android:layout_weight="1"
                                        android:text="Женщина" />
                                </RadioGroup>

                            </androidx.constraintlayout.widget.ConstraintLayout>
                        </androidx.core.widget.NestedScrollView>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.core.widget.NestedScrollView>

                <TextView
                    android:id="@+id/edit_user_btn"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_margin="32dp"
                    android:background="@drawable/gradient_of_next_button"
                    android:gravity="center"
                    android:text="Сохранить"
                    android:textColor="@color/colorBackgrndFrg"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>