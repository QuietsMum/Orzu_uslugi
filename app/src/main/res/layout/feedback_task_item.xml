<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageViewOtklik"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:background="@drawable/circle_shape_whitewrap"
                    android:contentDescription="@string/nav_header_desc"
                    android:layout_marginStart="8dp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_person_72pt_3x"
                    android:tint="@color/colorBackLight" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/feedback_task_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextLight"
                        android:textStyle="bold"
                        android:text="Имя Фамилия"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:gravity="end|center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/countFeedbackTask1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"/>

                    <ImageView
                        android:id="@+id/imageFeedbackTask1"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        app:srcCompat="@drawable/ic_bad" />

                    <TextView
                        android:id="@+id/countFeedbackTask2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:text="0"/>

                    <ImageView
                        android:id="@+id/imageFeedbackTask2"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        app:srcCompat="@drawable/ic_neutral2" />

                    <TextView
                        android:id="@+id/countFeedbackTask3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        android:text="0"/>

                    <ImageView
                        android:id="@+id/imageFeedbackTask3"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginLeft="8dp"
                        app:srcCompat="@drawable/ic_happy2" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/narrFeedbackTask"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextLight"
                    android:textSize="12sp"
                    android:text="Безопасная оплата картой и гарантия возврата денег. Компенсация в случае морального ущерба."/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:id="@+id/amtFeedbackTask"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1000"
                        android:textColor="@color/colorTextDark"
                        android:textSize="14sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <LinearLayout
                                android:id="@+id/button_callsugester"
                                android:layout_width="170dp"
                                android:layout_height="30dp"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:visibility="invisible"
                                android:background="@drawable/button_background_new"
                                android:padding="4dp"  >

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:text="Позвонить исполнителю"
                                    android:textColor="@color/colorBackgrndFrg"
                                    android:textSize="14sp" />

                            </LinearLayout>

                        <LinearLayout
                            android:id="@+id/button_addsugester"
                            android:layout_width="170dp"
                            android:layout_height="30dp"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:background="@drawable/circle_shape_intro_blue_5corner_stroke"
                            android:padding="4dp"  >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="Добавить исполнителя"
                                android:textColor="@color/colorAccent"
                                android:textSize="14sp" />

                        </LinearLayout>
                        </RelativeLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>

        </LinearLayout>


</LinearLayout>