<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserView">

       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal|bottom"
                        android:textColor="@color/colorPrimaryLight"
                        android:textStyle="bold"
                        android:textSize="40sp"
                        android:text="0"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:layout_gravity="top"
                        android:gravity="center_horizontal"
                        android:textColor="@color/colorPrimaryLight"
                        android:textSize="12sp"
                        android:text="заданий\nсоздано"/>

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/imageViewName"
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:background="@drawable/circle_shape_whitewrap"
                        android:contentDescription="@string/nav_header_desc"
                        android:padding="15dp"
                        android:gravity="center"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_person_72pt_3x"
                        android:tint="@color/colorBackLight"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_weight="0"
                        android:gravity="bottom"
                        android:layout_margin="6dp"
                        android:background="@drawable/circle_shape_green"
                        android:tint="@color/colorPrimaryLight"
                        android:scaleType="centerCrop"
                        android:contentDescription="@string/nav_header_desc"
                        app:layout_constraintBottom_toBottomOf="@+id/imageViewName"
                        app:layout_constraintEnd_toEndOf="@+id/imageViewName"/>

                </androidx.constraintlayout.widget.ConstraintLayout>



                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal|bottom"
                        android:textColor="@color/colorPrimaryLight"
                        android:textStyle="bold"
                        android:textSize="40sp"
                        android:text="0"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="2"
                        android:layout_gravity="top"
                        android:gravity="center_horizontal"
                        android:textColor="@color/colorPrimaryLight"
                        android:textSize="12sp"
                        android:text="заданий\nисполнено"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryLight"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:background="@drawable/circle_shape_intro_white"/>


            </LinearLayout>

           <androidx.cardview.widget.CardView
               android:id="@+id/card_of_user_view_activity_shim"
               android:layout_width="match_parent"
               android:layout_height="0dp"
               android:layout_marginTop="12dp"
               android:layout_weight="5"
               >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginTop="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTextLight"
                            android:layout_margin="8dp"
                            android:textSize="16sp"
                            android:text="Дата рождения"/>

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTextDark"
                            android:layout_marginEnd="6dp"
                            android:layout_marginStart="6dp"
                            android:background="@drawable/circle_shape_intro_grey"/>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTextLight"
                            android:layout_margin="8dp"
                            android:textSize="16sp"
                            android:text="Пол"/>

                        <TextView
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTextDark"
                            android:layout_marginEnd="6dp"
                            android:layout_marginStart="6dp"
                            android:background="@drawable/circle_shape_intro_grey"/>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTextLight"
                            android:layout_margin="8dp"
                            android:textSize="16sp"
                            android:text="О себе"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextDark"
                        android:layout_marginEnd="6dp"
                        android:layout_marginStart="6dp"
                        android:textSize="16sp"
                        android:background="@drawable/circle_shape_intro_grey" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextDark"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="6dp"
                        android:layout_marginStart="6dp"
                        android:textSize="16sp"
                        android:background="@drawable/circle_shape_intro_grey" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextDark"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="6dp"
                        android:layout_marginStart="6dp"
                        android:textSize="16sp"
                        android:background="@drawable/circle_shape_intro_grey" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTextLight"
                            android:layout_gravity="center"
                            android:layout_margin="8dp"
                            android:textSize="16sp"
                            android:text="Отзывы"/>




                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp">
                        <TextView
                            android:id="@+id/no_reviews"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorTextDark"
                            android:gravity="center"
                            android:layout_marginStart="8dp"
                            android:visibility="invisible"
                            android:text="Пока нет отзывов."/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:id="@+id/imageViewOtziv1"
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:background="@drawable/circle_shape_whitewrap"
                                    android:contentDescription="@string/nav_header_desc"
                                    android:layout_marginStart="8dp"
                                    android:padding="5dp"
                                    android:gravity="center"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ic_person_72pt_3x"
                                    android:tint="@color/colorBackLight" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="12dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="100dp"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/colorTextLight"
                                        android:textStyle="bold"
                                        android:background="@drawable/circle_shape_intro_grey"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:gravity="end|center_vertical"
                                    android:layout_marginEnd="8dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/userview_feedbackplus"
                                        android:layout_width="10dp"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/circle_shape_intro_grey"/>

                                    <ImageView
                                        android:id="@+id/userview_feedbackplus_image"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_marginStart="8dp"
                                        android:layout_marginLeft="8dp"
                                        app:srcCompat="@drawable/ic_happy2" />

                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="64dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/userview_feedbacknarr"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorTextLight"
                                    android:textSize="12sp"
                                    android:background="@drawable/circle_shape_intro_grey"/>
                                <TextView
                                    android:id="@+id/userview_feedbackcat"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:layout_marginBottom="4dp"
                                    android:textSize="12sp"
                                    android:background="@drawable/circle_shape_intro_grey"/>

                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                    <View
                        android:id="@+id/divider_view"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorPrimaryGrey"
                        android:layout_marginStart="64dp"
                        android:layout_marginTop="8dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="8dp"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="45dp"
                                    android:layout_height="45dp"
                                    android:background="@drawable/circle_shape_whitewrap"
                                    android:contentDescription="@string/nav_header_desc"
                                    android:layout_marginStart="8dp"
                                    android:padding="5dp"
                                    android:gravity="center"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/ic_person_72pt_3x"
                                    android:tint="@color/colorBackLight" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginStart="12dp"
                                    android:orientation="vertical">
                                    <TextView
                                        android:layout_width="100dp"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/colorTextLight"
                                        android:textStyle="bold"
                                        android:background="@drawable/circle_shape_intro_grey"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="45dp"
                                    android:gravity="end|center_vertical"
                                    android:layout_marginEnd="8dp"
                                    android:orientation="horizontal">
                                    <TextView
                                        android:layout_width="10dp"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/circle_shape_intro_grey"/>

                                    <ImageView
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_marginStart="8dp"
                                        android:layout_marginLeft="8dp"
                                        app:srcCompat="@drawable/ic_bad" />

                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="64dp"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textColor="@color/colorTextLight"
                                    android:textSize="12sp"
                                    android:background="@drawable/circle_shape_intro_grey"/>
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:textSize="12sp"
                                    android:background="@drawable/circle_shape_intro_grey"/>

                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/linear_feedback_click"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginBottom="8dp"
                        android:layout_margin="8dp"
                        android:gravity="center"
                        android:background="@drawable/circle_shape_intro_blue_5corner_stroke"
                        android:orientation="horizontal"
                        android:padding="8dp">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Посмотреть все отзывы"
                            android:textColor="@color/colorAccent"
                            android:textSize="16sp" />
                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>