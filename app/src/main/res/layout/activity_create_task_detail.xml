<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateTaskDetail">

    <ImageView
        android:id="@+id/image_back_name_tast"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/back_blue"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/create_details_back"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_arrow_back_white_48pt_3x"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



            <LinearLayout
                android:id="@+id/linear_for_name_tast"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:orientation="vertical"
                android:weightSum="7">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"></androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_of_create_details"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="6"
                    >

                    <androidx.core.widget.NestedScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:layout_marginBottom="8dp"
                                android:gravity="center"
                                android:text="@string/step_5_5"
                                android:textColor="@android:color/darker_gray" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="8dp"
                                android:paddingStart="8dp"
                                android:text="@string/opisanie"
                                android:textSize="16sp" />

                            <EditText
                                android:id="@+id/detail_textinput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:background="@android:color/transparent"
                                android:hint="@string/tell_about_task"
                                android:padding="8dp" />

                            <View
                                android:id="@+id/viewview2"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_margin="16dp"
                                android:background="@color/colorPrimaryGrey" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:id="@+id/pluslinearyimages"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="30dp"
                                        android:layout_height="30dp"
                                        android:layout_marginStart="16dp"
                                        android:src="@drawable/ic_link_black_48dp"
                                        android:tint="@color/colorAccent" />

                                    <TextView
                                        android:id="@+id/textPlusImages"
                                        android:layout_width="wrap_content"
                                        android:layout_height="30dp"
                                        android:layout_gravity="center"
                                        android:layout_margin="16dp"
                                        android:text="@string/plus_images_button"
                                        android:textColor="@color/colorAccent" />


                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/linearyimages"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="8dp"
                                    android:layout_marginEnd="8dp"
                                    android:orientation="vertical">


                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="120dp"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/imageTaskCreate1"
                                            android:layout_width="0dp"
                                            android:layout_height="0dp"
                                            android:layout_gravity="center"
                                            android:layout_margin="8dp"
                                            android:background="@drawable/gal_image_create"
                                            android:scaleType="centerCrop"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintHeight_percent="1"
                                            app:layout_constraintLeft_toLeftOf="parent"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintWidth_percent="0.3" />

                                        <ImageView
                                            android:id="@+id/imageTaskCreate2"
                                            android:layout_width="0dp"
                                            android:layout_height="0dp"
                                            android:layout_gravity="center"
                                            android:layout_margin="8dp"
                                            android:background="@drawable/gal_image_create"
                                            android:scaleType="centerCrop"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintHeight_percent="1"
                                            app:layout_constraintLeft_toLeftOf="parent"
                                            app:layout_constraintRight_toRightOf="parent"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintWidth_percent="0.3" />

                                        <ImageView
                                            android:id="@+id/imageTaskCreate3"
                                            android:layout_width="0dp"
                                            android:layout_height="0dp"
                                            android:layout_gravity="center"
                                            android:layout_margin="8dp"
                                            android:background="@drawable/gal_image_create"
                                            android:scaleType="centerCrop"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintHeight_percent="1"
                                            app:layout_constraintRight_toRightOf="parent"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintWidth_percent="0.3" />

                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="30dp"
                                            android:orientation="horizontal"
                                            app:layout_constraintLeft_toLeftOf="parent"
                                            app:layout_constraintRight_toRightOf="parent"
                                            app:layout_constraintTop_toTopOf="parent">

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_marginStart="16dp"
                                                android:gravity="end"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintHeight_percent="1"
                                                app:layout_constraintLeft_toLeftOf="parent"
                                                app:layout_constraintTop_toTopOf="parent"
                                                app:layout_constraintWidth_percent="0.3">

                                                <ImageView
                                                    android:id="@+id/imagedelete1"
                                                    android:layout_width="30dp"
                                                    android:layout_height="30dp"
                                                    android:layout_gravity="center"
                                                    android:scaleType="centerCrop"
                                                    android:src="@drawable/delete_image" />
                                            </LinearLayout>


                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_marginStart="16dp"
                                                android:gravity="end"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintHeight_percent="1"
                                                app:layout_constraintLeft_toLeftOf="parent"
                                                app:layout_constraintRight_toRightOf="parent"
                                                app:layout_constraintTop_toTopOf="parent"
                                                app:layout_constraintWidth_percent="0.3">

                                                <ImageView
                                                    android:id="@+id/imagedelete2"
                                                    android:layout_width="30dp"
                                                    android:layout_height="30dp"
                                                    android:layout_gravity="center"
                                                    android:scaleType="centerCrop"
                                                    android:src="@drawable/delete_image" />
                                            </LinearLayout>


                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:gravity="end"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintHeight_percent="1"
                                                app:layout_constraintRight_toRightOf="parent"
                                                app:layout_constraintTop_toTopOf="parent"
                                                app:layout_constraintWidth_percent="0.3">

                                                <ImageView
                                                    android:id="@+id/imagedelete3"
                                                    android:layout_width="30dp"
                                                    android:layout_height="30dp"
                                                    android:layout_gravity="center"
                                                    android:scaleType="centerCrop"
                                                    android:src="@drawable/delete_image" />
                                            </LinearLayout>

                                        </androidx.constraintlayout.widget.ConstraintLayout>

                                    </androidx.constraintlayout.widget.ConstraintLayout>

                                    <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="120dp"
                                        android:orientation="horizontal">

                                        <ImageView
                                            android:id="@+id/imageTaskCreate4"
                                            android:layout_width="0dp"
                                            android:layout_height="0dp"
                                            android:layout_gravity="center"
                                            android:layout_margin="8dp"
                                            android:background="@drawable/gal_image_create"
                                            android:scaleType="centerCrop"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintHeight_percent="1"
                                            app:layout_constraintLeft_toLeftOf="parent"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintWidth_percent="0.3" />

                                        <ImageView
                                            android:id="@+id/imageTaskCreate5"
                                            android:layout_width="0dp"
                                            android:layout_height="0dp"
                                            android:layout_gravity="center"
                                            android:layout_margin="8dp"
                                            android:background="@drawable/gal_image_create"
                                            android:scaleType="centerCrop"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintHeight_percent="1"
                                            app:layout_constraintLeft_toLeftOf="parent"
                                            app:layout_constraintRight_toRightOf="parent"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintWidth_percent="0.3" />

                                        <ImageView
                                            android:id="@+id/imageTaskCreate6"
                                            android:layout_width="0dp"
                                            android:layout_height="0dp"
                                            android:layout_gravity="center"
                                            android:layout_margin="8dp"
                                            android:background="@drawable/gal_image_create"
                                            android:scaleType="centerCrop"
                                            app:layout_constraintBottom_toBottomOf="parent"
                                            app:layout_constraintHeight_percent="1"
                                            app:layout_constraintRight_toRightOf="parent"
                                            app:layout_constraintTop_toTopOf="parent"
                                            app:layout_constraintWidth_percent="0.3" />

                                        <androidx.constraintlayout.widget.ConstraintLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="30dp"
                                            android:orientation="horizontal"
                                            app:layout_constraintLeft_toLeftOf="parent"
                                            app:layout_constraintRight_toRightOf="parent"
                                            app:layout_constraintTop_toTopOf="parent">

                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_marginStart="16dp"
                                                android:gravity="end"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintHeight_percent="1"
                                                app:layout_constraintLeft_toLeftOf="parent"
                                                app:layout_constraintTop_toTopOf="parent"
                                                app:layout_constraintWidth_percent="0.3">

                                                <ImageView
                                                    android:id="@+id/imagedelete4"
                                                    android:layout_width="30dp"
                                                    android:layout_height="30dp"
                                                    android:layout_gravity="center"
                                                    android:scaleType="centerCrop"
                                                    android:src="@drawable/delete_image" />
                                            </LinearLayout>


                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:layout_marginStart="16dp"
                                                android:gravity="end"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintHeight_percent="1"
                                                app:layout_constraintLeft_toLeftOf="parent"
                                                app:layout_constraintRight_toRightOf="parent"
                                                app:layout_constraintTop_toTopOf="parent"
                                                app:layout_constraintWidth_percent="0.3">

                                                <ImageView
                                                    android:id="@+id/imagedelete5"
                                                    android:layout_width="30dp"
                                                    android:layout_height="30dp"
                                                    android:layout_gravity="center"
                                                    android:scaleType="centerCrop"
                                                    android:src="@drawable/delete_image" />
                                            </LinearLayout>


                                            <LinearLayout
                                                android:layout_width="0dp"
                                                android:layout_height="match_parent"
                                                android:gravity="end"
                                                app:layout_constraintBottom_toBottomOf="parent"
                                                app:layout_constraintHeight_percent="1"
                                                app:layout_constraintRight_toRightOf="parent"
                                                app:layout_constraintTop_toTopOf="parent"
                                                app:layout_constraintWidth_percent="0.3">

                                                <ImageView
                                                    android:id="@+id/imagedelete6"
                                                    android:layout_width="30dp"
                                                    android:layout_height="30dp"
                                                    android:layout_gravity="center"
                                                    android:scaleType="centerCrop"
                                                    android:src="@drawable/delete_image" />
                                            </LinearLayout>

                                        </androidx.constraintlayout.widget.ConstraintLayout>

                                    </androidx.constraintlayout.widget.ConstraintLayout>

                                    <LinearLayout
                                        android:id="@+id/linear_image_click"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_margin="8dp"
                                        android:layout_marginBottom="8dp"
                                        android:layout_weight="1"
                                        android:background="@drawable/circle_shape_intro_blue_5corner_stroke"
                                        android:orientation="horizontal"
                                        android:padding="16dp">

                                        <ImageView
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            android:layout_gravity="center"
                                            android:scaleType="centerCrop"
                                            android:src="@drawable/plus_image_create" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:padding="8dp"
                                            android:text="@string/photo_plus"
                                            android:textColor="@color/colorTextGrad"
                                            android:textSize="18sp" />

                                    </LinearLayout>

                                </LinearLayout>
                            </RelativeLayout>

                            <TextView
                                android:id="@+id/createDetails"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_gravity="bottom"
                                android:layout_margin="32dp"
                                android:background="@drawable/gradient_of_next_button"
                                android:gravity="center"
                                android:text="@string/next_button"
                                android:textColor="@color/colorBackgrndFrg"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </androidx.core.widget.NestedScrollView>




                </androidx.cardview.widget.CardView>
            </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>